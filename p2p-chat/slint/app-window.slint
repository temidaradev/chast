import { Button, VerticalBox, HorizontalBox, LineEdit } from "std-widgets.slint";

export component StartWindow inherits Window {
  title: "Chast";
  width: 800px;
  height: 600px;
  background: black;

  callback switch-to-join-window;

  GridLayout {
    padding-left: 300px;
    padding-right: 300px;
    padding-top: 250px;
    padding-bottom: 250px;
    spacing: 10px;

    Row {
        Text {
          text: "Chast";
          horizontal-alignment: center;
          font-size: 48px;
          font-weight: 900;
        }
    }
    Row {
      VerticalBox {
        Button {
          text: "Create Room";
        }
        Button {
          text: "Join Room";
          clicked => { switch-to-join-window(); }
        }
      }
    }
  }
}

